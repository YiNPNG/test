<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="30dp"
        android:textColor="#707070"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:id="@+id/shape_1"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_corner_down"
            android:text="关于我"
            android:drawableLeft="@drawable/image1"
            android:drawableRight="@drawable/image5"
            android:gravity="center_vertical"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/shape_2"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_corner_down"
            android:text="关于你"
            android:drawableLeft="@drawable/image1"
            android:drawableRight="@drawable/image5"
            android:gravity="center_vertical"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/shape_3"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_corner_down"
            android:text="关于我们"
            android:drawableLeft="@drawable/image1"
            android:drawableRight="@drawable/image5"
            android:gravity="center_vertical"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/shape_4"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_corner_down"
            android:text="关于他们"
            android:drawableLeft="@drawable/image1"
            android:drawableRight="@drawable/image5"
            android:gravity="center_vertical"
            android:textSize="20dp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:drawableBottom="@drawable/image3"/>
</LinearLayout>
