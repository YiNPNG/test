<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/image4"
    tools:context="com.example.dell.mylastapplication.MainActivity">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:drawableTop="@drawable/image2"
       android:text="your_name"
       android:textSize="25dp"
       android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#707070"
        />

    <LinearLayout
        android:id="@+id/LayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:text="在线视频"
            android:textSize="20dp"
            android:textColor="#1F1F1F"
            android:background="@drawable/button_selector"

            />

        <!--<View
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:background="#DEDEDE"
            />-->

        <Button
            android:id="@+id/button2"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:text="浏览记录"
            android:textSize="20dp"
            android:background="@drawable/button_selector"
            android:textColor="#1F1F1F"
            />

    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"
        />-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button3"
                android:layout_width="170dp"
                android:layout_height="90dp"

                android:textSize="20dp"
                android:textColor="#1F1F1F"
                android:background="@drawable/button_selector"
                 /><!--android:text="我的拍摄"-->

            <!--<View
                android:layout_width="1dp"
                android:layout_height="90dp"
                android:background="#DEDEDE"
                />-->

            <Button
                android:id="@+id/button4"
                android:layout_width="190dp"
                android:layout_height="90dp"

                android:textSize="20dp"
                android:textColor="#1F1F1F"
                android:background="@drawable/button_selector"
               /><!--android:text="扫描视频"-->
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#BFBFBF"
            />

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="浏览本地视频"
            android:textSize="20dp"
            android:textColor="#1F1F1F"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/image1"
            android:drawableRight="@drawable/image5"
            android:background="@drawable/button_selector"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#707070"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="设置"
            android:textSize="20dp"
            android:textColor="#1F1F1F"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/image1"
            android:background="@drawable/button_selector"
            android:drawableRight="@drawable/image5"
             />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#707070"
            />
    </LinearLayout>

</LinearLayout>
